<!doctype html>
<html lang="pt-br">

<head>
    <meta charset="utf-8">
    <link rel="icon" href="css/Imagens/FROM.png">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Buses Control - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
          integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css"
          integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/home.css">
    <link rel="stylesheet" href="~/css/datatables.min.css">
</head>

<body>
    <div class="wrapper d-flex align-items-stretch">
        <nav id="sidebar" class="active">
            <h1><a class="logo"><span class="fa fa-bus"></span></a></h1>
            <ul class="list-unstyled components mb-5">
                <li class="linha">
                    <a asp-area="" asp-controller="Home" asp-action="Index"><span class="fa fa-home"></span> Home</a>
                </li>
                <li class="linha">
                    <a asp-area="" asp-controller="Cliente" asp-action="Index"><span class="fa fa-user"></span> Clientes</a>
                </li>
                <li class="linha">
                    <a asp-area="" asp-controller="Funcionario" asp-action="Index"><span class="fa fa-user"></span> Funcio&shy;nários</a>
                </li>
                <li class="linha">
                    <a asp-area="" asp-controller="Frota" asp-action="Index"><span class="fa fa-bus"></span> Frota</a>
                </li>
                <li class="linha">
                    <a asp-area="" asp-controller="Contrato" asp-action="Index"><span class="fa fa-file"></span> Contratos</a>
                </li>
                <br>
                 <li class="linha">
                    <a asp-action="Index" asp-controller="Logar"><span class="fa fa-door-closed"></span> Deslogar</a>
                </li>
                <br>
            </ul>
            <div class="footer">
                <p style="text-align: justify;">
                    Copyright &copy;
                    <script>document.write(new Date().getFullYear());</script> <a href="" class="text-white" style="text-decoration: underline;">Todos os direitos reservados.</a>  | <a href="" class="text-white" style="text-decoration: underline;">Política de uso da aplicação.</a>
                </p>
            </div>
        </nav>
        <!-- Page Content  -->
        <div id="content" class="p-0 p-md-0" role="main">
            <nav class="navbar navbar-expand-lg">
                <div class="container-fluid">

                    <button type="button" id="sidebarCollapse" class="btn btn-primary">
                        <i class="fa fa-bars"></i>
                        <span class="sr-only">Toggle Menu</span>
                    </button>
                    <button class="btn btn-dark d-inline-block d-lg-none ml-auto" type="button" data-toggle="collapse"
                            data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <i class="fa fa-bars"></i>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="nav navbar-nav ml-auto">
                            <li class="nav-item linha">
                                <a class="nav-link linkMenu" asp-area="" asp-controller="Relatorio" asp-action="Index">Relatórios</a>
                            </li>
                            <li class="nav-item linha">
                                <a class="nav-link linkMenu" asp-area="" asp-controller="Financeiro" asp-action="Index">Financeiro</a>
                            </li>
                            <li class="nav-item linha">
                                <a class="nav-link linkMenu" asp-area="" asp-controller="AprovarContrato" asp-action="Index">Aprovar contratos</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            @RenderBody()
        </div>
    </div>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/main.js"></script>
    <script src="~/js/popper.js"></script>
    <script src="~/js/site.js"></script>
    <script src="~/js/datatables.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>

</html>