<link rel="stylesheet" href="~/css/cliente.css">
@model List<Cliente>
@if (TempData["MensagemDeSucesso"] != null) {
    <div class="alert alert-success" role="alert">
        @TempData["MensagemDeSucesso"]
        <button type="button" class="btn btn-danger btn-sm close-alert sucesso" aria-label="Close"> X </button>
    </div>
}
@if (TempData["MensagemDeErro"] != null) {
    <div class="alert alert-danger" role="alert">
        @TempData["MensagemDeErro"]
        <button type="button" class="btn btn-danger btn-sm close-alert erro" aria-label="Close"> X </button>
    </div>
}
<section class="clientes">
    <!--Cadastro, edição e desativação de clientes-->
    <h3 id="bac">
        <i class="fa fa-users"></i> Clientes
        <hr style="margin-top: 3px;">
    </h3>
    <div class="cliente">
        <div class="flex-btn">
            <div class="flex-item">
                <div class="btn-group btn-group-toggle" data-toggle="buttons">
                    <label class="btn filtrar_btn enum">
                        <input type="radio" name="options" id="option1" autocomplete="off" checked> Habilitados
                    </label>
                    <label class="btn filtrar_btn noCheck">
                        <input type="radio" name="options" id="option2" autocomplete="off"> Desabilitados
                    </label>
                </div>
                <div>
                    <a type="submit" class="btn filtrar_btn" asp-controller="Cliente" asp-action="NovoCliente" style="margin-left: 6px;">
                        + Pessoa física
                    </a>
                    <a type="submit" class="btn filtrar_btn" asp-controller="Cliente" asp-action="NovoClienteJuridico" style="margin-left: 6px;">
                        + Pessoa júridica
                    </a>
                </div>
            </div>
        </div>
        <table id="table-cliente" class="table shadow p-3 mb-5 bg-white rounded">
            <thead>
                <tr>
                    <th scope="col">id</th>
                    <th scope="col">Nome</th>
                    <th scope="col">Telefone</th>
                    <th scope="col">Cidade</th>
                    <th scope="col">Opção</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any()) {
                    foreach (Cliente cliente in Model) {
                        <tr class="row-hover">
                            <th scope="row">@cliente.Id</th>
                            <td>@cliente.Name</td>
                            <td>@cliente.Telefone</td>
                            <td>@cliente.Cidade</td>
                            <td>
                                <a class="link" asp-action="EditarCliente" asp-route-id="@cliente.Id">
                                    <i class="fa fa-pen"></i>
                                </a>
                                <a class="link" asp-action="Visualisar" asp-route-id="@cliente.Id"><i class="fa fa-eye"></i></a>
                                <a class="link" asp-route-id="@cliente.Id"><i class="fa fa-user-slash"></i></a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</section>
<script src="~/Js copy/FiltrosCliente.js"></script>
<script src="~/Js copy/ModalCliente.js"></script>
<script src="~/js/site.js"></script>
<script src="~/js/jquery.min.js"></script>
<script src="~/js/bootstrap.min.js"></script>
@section Scripts{
    <script>
        $(document).ready(function() {
            $('#table-cliente').DataTable({
                "ordering": true,
                "paging": true,
                "searching": true,
                "oLanguage": {
                    "sEmptyTable": "Não existe registros no sistema.",
                    "sInfo": "",
                    "sInfoEmpty": "",
                    "sInfoFiltered": "",
                    "sInfoPostFix": "",
                    "sInfoThousands": ".",
                    "sLengthMenu": "",
                    "sLoadingRecords": "Carregando...",
                    "sProcessing": "Processando...",
                    "sZeroRecords": "Nenhum registro encontrado.",
                    "sSearch": "Pesquisar:  ",
                    "oPaginate": {
                        "sNext": "Próximo",
                        "sPrevious": "Anterior",
                        "sFirst": "Primeiro",
                        "sLast": "Último"
                    },
                    "oAria": {
                        "sSortAscending": ": Ordenar colunas de forma ascendente",
                        "sSortDescending": ": Ordenar colunas de forma descendente"
                    }
                }
            });
        });
    </script>
}