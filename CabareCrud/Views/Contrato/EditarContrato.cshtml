                        <input type="hidden" asp-for="@Model.ClienteId"> <!-- Apenas para passar o Id do cliente.-->
                        <input id="cliente" class="form-control campUser" value="@Model.Contrato.ReturnDetalhesCliente()" readonly>
                        <a class="consult-flow" data-target="#detalhesClient" data-toggle="modal"><i class="fa fa-info icon-detalhes"></i></a>
                    }
