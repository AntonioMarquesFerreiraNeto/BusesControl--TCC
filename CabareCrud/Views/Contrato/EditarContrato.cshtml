@using BusesControl.Models.Enums
@model BusesControl.Models.ViewModels.ModelsContrato
<link rel="stylesheet" href="~/css/style.css">
<link rel="stylesheet" href="~/css/contrato.css">
<link rel="stylesheet" href="~/css/home.css">
@if (TempData["MensagemDeErro"] != null) {
    <div class="alert alert-danger" role="alert">
        @TempData["MensagemDeErro"]
        <button type="button" class="btn btn-danger btn-sm close-alert erro" aria-label="Close"> X </button>
    </div>
}
@if (TempData["MensagemDeInfo"] != null) {
    <div class="alert alert-info" role="alert">
        @TempData["MensagemDeInfo"]
        <button type="button" class="btn btn-danger btn-sm close-alert info" aria-label="Close"> X </button>
    </div>
}
<section class="clientes">
    <h3 id="bac">
        <i class="fa fa-file-contract"></i>
        @ViewData["Title"]
        <hr style="margin-top: 2px;">
    </h3>
    <section class="cliente">
